<header class="row">
  <div class="col-sm-5">
    <h3><%= t('Loop') %></h3>
  </div>
</header>

<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th>LID</th>
      <td><%= @loop.lid %></td>
    </tr>
    <tr>
      <th><%= t('Schedule') %></th>
      <td><tt><%= @loop.schedule %></tt></td>
    </tr>
    <tr>
      <th><%= t('Class') %></th>
      <td><%= @loop.klass %></td>
    </tr>
    <tr>
      <th><%= t('Options') %></th>
      <td><%= @loop.options %></td>
    </tr>
    <tr>
      <th><%= t('Next Run') %></th>
      <td><tt><%= Time.at(@loop.next_run) %></tt></td>
    </tr>
  </tbody>
</table>

<% hist = @loop.history %>
<header class="row">
  <div class="col-sm-8">
    <h3><%= t('History') %></h3>
  </div>
</header>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= t('Enqueued') %></th>
      <th>JID</th>
    </tr>
  </thead>
  <tbody>
    <% hist.each do |(jid, timestamp)| %>
      <tr>
        <td><%= Time.at(timestamp) %></td>
        <td><%= jid %></td>
      </tr>
    <% end %>
  </tbody>
</table>
